
<div class="row">
  <div class="col-md-4">
		<h2>Current Friends</h2>
		<hr>
		<table class="table table-striped">
			<% @friends.each do |friend|%>
				<tr>
					<td><%=friend.username%></td>
				</tr>
			<% end %>
		</table>
  </div>

	<div class="col-md-4">
	<h2>Want more friends?</h2>
		<hr>
		<table class="table table-striped">
			<% @not_friends.each do |stranger|%>
				<% if current_user.id != stranger.id %>
				<tr>
					<td><%=stranger.username%></td>
					<td>
						<%= form_tag '/users/invite', method: :POST do %>
							<%= hidden_field_tag :guest_id, stranger.id %>
			    			<span>
			    				<%= submit_tag "Invite", class: "btn btn-primary pull-right"%>
			    			</span>
						<% end %>
					</td>
				</tr>
			<% end %>
			<% end %>
		</table>
	</div>
	
  <div class="col-md-4">
  	<h2>Find Friends</h2>
  	<hr>
		<%= form_tag users_path, method: :GET do %>
			<div class="input-group">
	    	<%= text_field_tag :search, nil, class: "form-control" %>
    		<span class="input-group-btn">
    			<%= submit_tag "Search", class: "btn btn-default"%>
    		</span>
	    </div>
		<% end %>
		<br>
		<table class="table table-striped">
			<% @users.each do |user|%>
			<% if current_user.id != user.id %>
				<tr>
					<td><%=user.username%></td>
					<td>
						<%= form_tag '/users/invite', method: :POST do %>
							<%= hidden_field_tag :guest_id, user.id %>
			    			<span>
			    				<%= submit_tag "Invite", class: "btn btn-primary pull-right"%>
			    			</span>
						<% end %>
					</td>
				</tr>
			<% end %>
			<% end %>
		</table>
  </div>

</div>
