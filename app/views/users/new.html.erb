<div class="row">
  <div class="col-md-4">
		<h2>Sign Up</h2>
		<%= form_for User.new do |f| %>
			<p>
				<%= f.label :username %><br>
				<%= f.text_field :username %>
			</p>
			<p>
				<%= f.label :email %><br>
				<%= f.email_field :email %>
			</p>
			<p>
				<%= f.label :password %><br>
				<%= f.password_field :password %>
			</p>
			<p>
				<%= f.label :password_confirmation %><br>
				<%= f.password_field :password_confirmation %>
			</p>
			<p>
				<%= f.submit(value = "Sign Up") %><br>
			</p>
		<% end %>
	</div>

  <div class="col-md-4">
		<h2>Log In</h2>
		<%= form_tag sessions_path do %>
			<p>
				<%= label_tag :email %><br>
				<%= email_field_tag :email %>
			</p>
			<p>
				<%= label_tag :password %><br>
				<%= password_field_tag :password %>
			</p>
			<p>
				<%= submit_tag(value = "Log In") %><br>
			</p>
		<% end %>
	</div>
